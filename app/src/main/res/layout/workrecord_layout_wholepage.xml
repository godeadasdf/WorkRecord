<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/workrecord_background_round"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/tabIndicator"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/tabTextSelected"
        app:tabTextAppearance="@style/TabText"
        app:tabTextColor="@color/tabText"></android.support.design.widget.TabLayout>

    <com.example.kangning.wordrecordindevidual.ui.NoScrollViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.example.kangning.wordrecordindevidual.ui.NoScrollViewPager>
</LinearLayout>