<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陈晓杰"
                android:textColor="@color/fontDarkBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="13241231222"
                android:textColor="@color/fontDarkBlack"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/listItemTitle"
                android:text="上班打卡:" />

            <TextView
                android:id="@+id/start"
                style="@style/listItemTime"
                android:text="09:00:00" />

            <ImageView
                android:id="@+id/outside"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/listItemTitle"
                android:text="下班打卡:" />

            <TextView
                android:id="@+id/end"
                style="@style/listItemTime"
                android:text="09:00:00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/listItemTitle"
                android:text="车辆回收:" />

            <TextView
                android:id="@+id/recycleNum"
                style="@style/listItemNumber"
                android:text="120" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/listItemTitle"
                android:text="车辆投放:" />

            <TextView
                android:id="@+id/distributeNum"
                style="@style/listItemNumber"
                android:text="50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/listItemTitle"
                android:text="车辆入库:" />

            <TextView
                android:id="@+id/outNum"
                style="@style/listItemNumber"
                android:text="480" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/listItemTitle"
                android:text="车辆出库:" />

            <TextView
                android:id="@+id/inNum"
                style="@style/listItemNumber"
                android:text="362" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="17dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

</LinearLayout>